{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist"
  },
  "include": [
    "handler.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
